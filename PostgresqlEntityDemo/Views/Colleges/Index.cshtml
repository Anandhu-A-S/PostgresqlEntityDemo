@model IEnumerable<PostgresqlEntityDemo.Models.College>

@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">College List</h2>
        </div>
         <div class="col-6 text-end" >
  
           <a asp-controller="Colleges" asp-action="Create"  class=" btn btn-primary"><i class="bi bi-plus-square"></i>Add College</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
             
             <th>
                @Html.DisplayNameFor(model => model.CollegeId)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                <p3>Edit</p3>
            </th>
            <th>
                 <p3>Details</p3>
            </th>
            <th>
                 <p3>Delete</p3>
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.CollegeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            
            <td>
                <a class=" btn btn-secondary" asp-action="Edit" asp-route-id="@item.CollegeId"><i class="bi bi-pencil-square"></i>Edit</a> 
                 
                
            </td>
            <td>
                <a class=" btn btn-info" asp-action="Details" asp-route-id="@item.CollegeId"><i class="bi bi-info-circle"></i>Details</a>
            </td>
            <td>
                <a class=" btn btn-danger" asp-action="Delete" asp-route-id="@item.CollegeId"><i class="bi bi-trash3"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
